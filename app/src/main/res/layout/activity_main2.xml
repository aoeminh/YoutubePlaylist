<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    >
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/yp_play"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp">

    </com.google.android.youtube.player.YouTubePlayerView>
    <TextView
        android:id="@+id/tv_title_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="title"
        android:layout_below="@+id/yp_play"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/tv_date_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="10sp"
            android:padding="5dp"
            android:layout_below="@id/tv_title_play"/>
        <TextView
            android:id="@+id/tv_description_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date_play"
            android:text="Description"
            android:textSize="12sp"
            android:padding="5dp"
            />
</RelativeLayout>